int[,] a;
int n=10;
a = new int[n,n];
int[] s=new int[n];
//сумма по строке
for (int i=0;i<n;i++) {
    for(int j=0;j<n;j++) {
        s[i]+=a[i,j];
    }
    Console.Writeln(s[i]," ");
}  
//сумма по столбцу
for (int i=0;i<n;i++) {
    for(int j=0;j<n;j++) {
        s[i]+=a[j,i];
    }
    Console.Writeln(s[i]," ");
}
